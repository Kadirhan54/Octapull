@model Octapull.MVC.Models.DeleteMeetingViewModel

<h2>Delete Meeting</h2>

<p>Are you sure you want to delete this recipe?</p>

<form asp-action="ConfirmDeleteMeeting" asp-controller="Meeting" method="post">
    <input type="hidden" name="id" value="@Model.id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Meeting")" class="btn btn-secondary">Cancel</a>
</form>
